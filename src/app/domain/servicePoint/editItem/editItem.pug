.service-point-item-edit

  .field

    label(for='service-point-item-edit-info') Pastaba:

    input.form-control#service-point-item-edit-info(
    ng-model='item.info'
    )

  .field

    label Filtro Sistema:

    vfs-dropdown(
    model-name='FilterSystem'
    current='item.filterSystem'
    destination='model'
    current-model='item'
    id-to-rewrite='filterSystemId'
    )

  .field

    label Montuotojas:

    vfs-dropdown(
    model-name='Employee'
    current='item.installingMaster'
    destination='name'
    current-model='item'
    id-to-rewrite='installingMasterId'
    )

  .field

    label Aptarnavimo Meistras:

    vfs-dropdown(
    model-name='Employee'
    current='item.servingMaster'
    destination='name'
    current-model='item'
    id-to-rewrite='servingMasterId'
    )