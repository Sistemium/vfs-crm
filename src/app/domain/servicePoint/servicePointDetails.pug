.service-point-detailed

  .service-point

    .service-point-info
      .address {{vm.servicePoint.address}}
      .service-point-contacts
        .contact(ng-repeat='servicePointContact in vm.servicePoint.servicePointContacts track by servicePointContact.id')
          span.name {{servicePointContact.person.firstName}} {{servicePointContact.person.lastName}}
          a.phone(href='tel:{{ employee.phoneInfo.phone}}') {{ servicePointContact.person.phone }}

    .button-block
      button.btn.btn-warning
        i.glyphicon.glyphicon-edit

  .service-point-items

    .header
      .header-text-1 Naudotojo Įrenginiai
      .button-block
        button.btn.btn-warning.action(
        ng-click=''
        )
          i.glyphicon.glyphicon-plus

    .service-point-list
      .headers
        .filter-system Filtro Sistema
        .installing-master Montavimo Meistras
        .serving-master Aptarnavimo Meistras
        .service-contract Sutartis
        .action-edit-button

      .scroll-y(
      resize
      resize-offset-top='5'
      )
        .service-point-item(
        ng-repeat='item in vm.servicePoint.servingItems track by item.id'
        )
          .filter-system
            span {{item.filterSystem.brand.nameS}} {{item.filterSystem.model}}
            span(ng-if='!item.filterSystem.brand.name') {{item.info}}
          .installing-master {{item.installingMaster.name}}
          .serving-master {{item.servingMaster.name}}
          .service-contract {{ item.currentServiceContract.num }} nuo {{ item.currentServiceContract.date }}
          .action-edit-button.action.button
            i.glyphicon.glyphicon.glyphicon-option-horizontal(
            ng-click='vm.editItem(item)'
            popover-placement='auto bottom-right'
            popover-is-open='vm.isOpenEditPopover'
            popover-trigger='"click"'
            uib-popover-template='"/app/domain/servicePoint/editItem/editItem.html"'
            popover-title='Įrenginio Modifikavimas'
            popover-append-to-body='false'
            )