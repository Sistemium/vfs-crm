.service-point-sidenav

  vfs-searcher(
  search='vm.searchText'
  )

  #sidenav-scroll-list.scroll-y(
  resize
  resize-offset-top='5'
  vs-repeat
  vs-excess='10'
  elem-ready='vm.restoreScrollPosition()'
  )
    .service-point(
    ng-repeat='servicePoint in vm.servicePoints | filter: vm.searchText | orderBy: "name" track by servicePoint.id'
    ng-click='vm.servicePointClickFn(servicePoint)'
    ng-class='{active: servicePoint.id === vm.currentServicePointId}'
    )
      .name {{servicePoint.name}}
      .address {{servicePoint.address}}
