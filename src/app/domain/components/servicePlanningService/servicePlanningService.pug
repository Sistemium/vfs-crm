.service-planning-service

  sab-date-picker-input(
  placeholder="{{ vm.servicePlanning.nextServiceDate }}"
  value="vm.newServiceDate"
  init-date="vm.monthDate"
  )

  .service-form(ng-if='vm.newServiceDate')

    .btn-group

      label.btn.btn-default(
      ng-model='vm.type'
      uib-btn-radio="'service'" uib-uncheckable='false'
      ) Ä®vykdytas

      label.btn.btn-default(
      ng-model='vm.type'
      uib-btn-radio="'forward'" uib-uncheckable='false'
      ) Perkelti

      label.btn.btn-default(
      ng-model='vm.type'
      uib-btn-radio="'pause'" uib-uncheckable='false'
      ) Sustabdyti

    .form-group-1

      input.info.form-control(
      placeholder='{{ vm.placeholder[vm.type].a }}'
      ng-model='vm.newServiceInfo'
      )

    .input-group(ng-if='vm.newServiceDate')

      input.info.form-control(
      placeholder='{{ vm.placeholder[vm.type].b }}'
      ng-model='vm.nextServiceInfo'
      )

      span.input-group-btn
        button.btn.btn-success(
        ng-click='vm.saveItemServiceClick()'
        )
          i.glyphicon.glyphicon-ok