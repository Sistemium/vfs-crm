h2.root-navbar(ng-hide='vm.hide' ng-class='{disabled: vm.hideNavs}')

  a.home(href ui-sref='home' ng-if='vm.currentIcon')
    img(ng-src='{{vm.currentIcon}}')

  a.home.sub-root-nav(href ng-click='vm.rootClick()' ng-if='vm.isSubRootState')
    b.glyphicon.glyphicon-chevron-left

  a(href ng-click='vm.rootClick()' ng-class='{inactive: vm.isHomeState}')
    span {{ vm.title }}

  .separator

  small.lastDigest(ng-if='vm.lastDigest >= 0') D:{{ vm.lastDigest }}

  syncer-indicator

  fullscreen-menu(ng-show='vm.isHomeState')

  // TODO: add component config option to unhardcode domain content
  .sales-navs(ng-if='vm.isSalesState')

    settings-popover(ng-if='vm.isCatalogueState')
    campaign-popover(ng-if='vm.isCatalogueState')
    salesman-menu

hr
