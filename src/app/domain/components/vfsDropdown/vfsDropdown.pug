.vfs-dropdown(ng-hide='vm.newItem')

  a(
  href
  uib-popover-template='"app/domain/components/vfsDropdown/vfsDropdown.template.html"'
  popover-is-open='vm.isOpen'
  popover-placement='{{vm.placement || "bottom-right"}}'
  )
    .name
      span(
      ng-if='vm.itemsGroupProperty && vm.currentItem'
      ng-bind='vm.groupLabel(vm.currentItem)'
      )
      span {{ vm.currentItem[vm.itemsNameProperty] || 'Paspauskite, kad pasirinkti' }}

    span.caret

  button-add(button-click='vm.addClick()')

.edit-block(ng-if='vm.newItem')

  .title

    span {{ vm.newItemTitle }}

    a.save.animate-show(
    href ng-click='vm.saveClick($event)'
    ng-show='vm.newItem.isValid()'
    )
      i.glyphicon.glyphicon-ok

    a.cancel(href ng-click='vm.cancelClick($event)')
      i.glyphicon.glyphicon-remove

  transform-to-component(component-name='{{vm.editComponentName}}' instance='vm.newItem')

  //.button-block

    button.btn.btn-success.animate-show.save.btn-sm(
    ng-click='vm.saveClick()'
    ng-disabled='!vm.newItem.isValid()'
    ) Išsaugoti

    button.btn.btn-default.cancel.btn-sm(
    ng-click='vm.cancelClick($event)'
    ) Atšaukti

