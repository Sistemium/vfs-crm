.filter-system

  navigation-bar(view-buttons='' state-name='' search-text='')

  .water-filter-table
    .headers
      .filter-name Filtras
      .last-name
      .telephone Mob. Telefonas

    .scroll-y(
    resize
    resize-offset-top='5'
    )
      .employee(
      ng-repeat='waterFilter in vm.waterFilters | filter: vm.searchText track by employee.id'
      )
        .first-name {{employee.person.firstName}}
        .last-name {{employee.person.lastName}}
        .telephone
          a(href='tel:{{ employee.person.phone }}') {{ employee.person.phone }}

