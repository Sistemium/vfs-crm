.edit-person

  .form

    .first-name
      label(for='first-name') Vardas

      input#first-name.form-control(
      required
      auto-focus
      autocomplete='off'
      placeholder='Vardas'
      ng-model='vm.person.firstName'
      )

    .last-name

      label(for='last-name') Pavardė

      input#last-name.form-control(
      required
      autocomplete='off'
      placeholder='Pavardė'
      ng-model='vm.person.lastName'
      )

    .code
      label(for='code') Asmens Kodas

      input#code.form-control(
      required
      autocomplete='off'
      placeholder='Asmens Kodas'
      ng-model='vm.person.code'
      )

    .phone
      label(for='phone') Telefonas

      input#phone.form-control(
      required
      autocomplete='off'
      ui-mask='{{vm.paste ? vm.phonePasteMask : vm.mobileNumberMask  }}'
      ng-model='vm.person.phone'
      data-ui-options = 'vm.maskOptions'
      ng-paste='vm.paste = true'
      )

    .email
      label(for='email') E-paštas

      input#email.form-control(
      required
      type='text'
      autocomplete='off'
      placeholder='E-pašto adresas'
      ng-model='vm.person.email'
      )
