.person(cg-busy='vm.cgBusy')

  navigation-bar(search-text='vm.searchText' edit-click-fn='vm.addClick')

  .headers
    .first-name Vardas
    .last-name PavardÄ—
    .code Asmens Kodas
    .phone Telefonas

  .scroll-y(
  resize
  resize-offset-top='5'
  vs-repeat
  )
    .person-list(
    ng-repeat='person in vm.persons | filter: vm.searchText track by person.id'
    ng-click='vm.openModal(person)'
    )

      .first-name {{ person.firstName }}
      .last-name {{ person.lastName }}
      .code {{ person.code }}
      .phone
        a(href='tel:{{person.phone}}') {{person.phone}}


