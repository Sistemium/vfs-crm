.employee-tiles

  .scroll-y(
  resize
  resize-offset-top='10'
  )

    .tile-repeater(ng-repeat='employee in vm.employees track by employee.id')
      .photo
        img(src='../../../images/placeholder.png')

      .info
        .first-name
          span  Vardas:
          label {{employee.personInfo.firstName}}
        .last-name
          span  PavardÄ—:
          label {{employee.personInfo.lastName}}
        .telephone
          i.glyphicon.glyphicon-earphone
          a(href='tel:{{ employee.phoneInfo.phone || "+37060743433" }}') {{employee.phoneInfo.phone || '+37060743433'}}
      .buttons
        button.btn.btn-default
          i.glyphicon.glyphicon-edit
        //button.btn.btn-default
        //  i.glyphicon.glyphicon-trash
        button.btn.btn-default
          i.glyphicon.glyphicon-camera
